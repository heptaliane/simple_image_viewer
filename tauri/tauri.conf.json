{
  "build": {
    "beforeDevCommand": "cd yew && trunk serve",
    "beforeBuildCommand": "cd yew && trunk build",
    "frontendDist": "../yew/dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "simple_image_viewer",
  "mainBinaryName": "simple_image_viewer",
  "version": "0.5.0",
  "identifier": "heptaliane.simple-image-viewer",
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "filename",
          "takesValue": true,
          "index": 1
        },
        {
          "name": "config",
          "short": "c",
          "takesValue": true
        }
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "assetProtocol": {
        "scope": [
          "**"
        ],
        "enable": true
      },
      "csp": "img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "simple_image_viewer",
        "width": 800,
        "height": 600,
        "useHttpsScheme": true
      }
    ]
  }
}
